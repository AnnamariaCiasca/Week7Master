<h1>Corsi</h1>
@model List<CorsoViewModel>
<p>Ecco la Lista dei corsi</p>

<a class="btn btn-primary" asp-controller="Corsi" asp-action="Create" type="button">Inserisci Nuovo Corso</a>


<table class = "table table-hover table-bordered table table-striped">
    <thead>
        <tr>
            <th>Codice</th>
            <th>Nome</th>
            @*<th>Descrizione</th>*@
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
            {
        <tr>
            <td>@item.CodiceCorso</td>
            <td>@item.Nome</td>
            @*<td>@item.Descrizione</td>*@
            <td>
                <a asp-controller="Corsi" asp-action="Details" asp-route-id="@item.CodiceCorso" class="btn btn-primary">Visualizza Dettagli</a>
            </td>
            <td>
                <a asp-controller="Corsi" asp-action="Update" asp-route-id="@item.CodiceCorso" class="btn btn-primary">Modifica</a>
            </td>
            <td>
                <a asp-controller="Corsi" asp-action="Delete" asp-route-id="@item.CodiceCorso" class="btn btn-primary">Elimina</a>
            </td>
        </tr>
            }
    </tbody>
    <tfoot>
        <tr>
            <th>Totale</th>
            <th>@Model.Count</th>
            @*<th></th>*@
            <th></th>
        </tr>
    </tfoot>
</table>