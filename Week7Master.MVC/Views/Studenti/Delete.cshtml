@model StudenteViewModel

<form method="post">
    <p>Sei sicuro di voler eliminare lo studente @Model.Nome - @Model.Cognome ?</p>
  
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly/>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" readonly/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cognome"></label>
        <input asp-for="Cognome" class="form-control" readonly/>
        <span asp-validation-for="Cognome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" readonly />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataNascita"></label>
        <input type="date" asp-for="DataNascita" class="form-control" readonly/>
        <span asp-validation-for="DataNascita" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Titolo"></label>
        <input asp-for="Titolo" class="form-control" readonly/>
        <span asp-validation-for="Titolo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CodiceCorso"></label>
        <input asp-for="CodiceCorso" class="form-control"readonly />
        <span asp-validation-for="CodiceCorso" class="text-danger"></span>
    </div>


    <input type="submit" value="Conferma" class="tbn btn-danger" />
    <a class="btn btn-primary" asp-controller="Corsi" asp-action="Index" role="button">Annulla</a>
</form>