<h1>Studenti</h1>
@model List<StudenteViewModel>
<p>Ecco la Lista degli Studenti</p>


<a class="btn btn-primary" asp-controller="Studenti" asp-action="Create" type="button">Inserisci Nuovo Studente</a>

<table class="table table-hover table-bordered table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Data di Nascita</th>
            <th>Email</th>
            <th>Titolo</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Cognome</td>
            <td>@item.DataNascita.ToShortDateString()</td>
            <td>@item.Email</td>
            <td>@item.Titolo</td>
            <td>
                <a asp-controller="Studenti" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Modifica</a>
            </td>
            <td>
                <a asp-controller="Studenti" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Elimina</a>
            </td>

        </tr>
        }
    </tbody>
</table>